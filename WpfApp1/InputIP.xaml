<Window x:Class="WpfApp1.InputIP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="InputIP" Height="80" Width="330" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="40" Margin="3,0,5,0">
            <Label x:Name="label" Content="IPアドレス:" Margin="0,0,0,0" Height="30" FontSize="18"/>
            <TextBox x:Name="IPtextBox" TextWrapping="Wrap" Text="192.68.1.1" Height="30" Margin="0,0,0,0"  Width="145" FontSize="20"/>
            <Button x:Name="ConectButton" Content="接続" Margin="5,7,4,0" VerticalAlignment="Top" Width="75" FontSize="18" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
