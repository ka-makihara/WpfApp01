<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:console="clr-namespace:PythonConsoleControl;assembly=PythonConsoleControl"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500.439" Width="623.256" Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="131*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,10,-0.333,-0.667" Grid.RowSpan="2">
            <Menu>
                <MenuItem Header="ファイル">
                    <MenuItem Header="開く"/>
                    <MenuItem Header="新規">
                        <MenuItem Header="ひな形"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="編集" Click="MenuItem_Click_1"/>
                <MenuItem Header="接続" Click="MenuItem_Click"/>
            </Menu>
            <StackPanel Height="50" Orientation="Horizontal" Margin="0,0,-0.333,0">
                <Label Content="スクリプト:" FontSize="20" Height="35" Width="90" />
                <ComboBox Height="35" Name="scriptFile" Width="447">
                    <ComboBox.Effect>
                        <DropShadowEffect/>
                    </ComboBox.Effect>
                </ComboBox>
            </StackPanel>
            <StackPanel Height="32" Margin="0,0,-0.333,0" Orientation="Horizontal">
                <Label Content="アップデートバージョン" FontSize="20" Width="200" Margin="10,0,0,0" />
                <Label Content="現在のバージョン" FontSize="20" Width="200" Margin="10,0,0,0" />
            </StackPanel>
            <StackPanel Height="338" Margin="0,0,0,0" Orientation="Horizontal">
                <StackPanel Width="420" Orientation="Horizontal">
                    <ListBox x:Name="updateVersion" Width="200" Margin="10,0,0,0" Background="#FFEEE5E1">
                        <ListBox.Effect>
                            <DropShadowEffect/>
                        </ListBox.Effect>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="{Binding Name}" Margin="2"/>
                                    <TextBlock Text="{Binding Version}" Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ListBox x:Name="curVersion" Width="200" Margin="10,0,0,0" Background="#FFEEE5E1">
                        <ListBox.Effect>
                            <DropShadowEffect/>
                        </ListBox.Effect>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="{Binding Name}" Margin="2"/>
                                    <TextBlock Text="{Binding Version}" Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                <StackPanel Width="198" Orientation="Vertical"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
